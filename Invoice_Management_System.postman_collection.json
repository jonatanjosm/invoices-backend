{
  "info": {
    "name": "Invoice Management System",
    "description": "A collection of API endpoints for the Invoice Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "item": [
    {
      "name": "Pay Invoice",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"invoiceNumber\": \"INV-001\",\n  \"paymentDate\": \"2023-01-15\",\n  \"amount\": 1000.00,\n  \"paymentMethod\": \"Credit Card\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/invoices/pay",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "invoices",
            "pay"
          ]
        },
        "description": "Pays an invoice. The invoice must be in PENDING status, and the payment amount must match the invoice amount."
      },
      "response": []
    },
    {
      "name": "Get All Invoices",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/invoices",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "invoices"
          ]
        },
        "description": "Retrieves all invoices from the system"
      },
      "response": []
    },
    {
      "name": "Get Invoice by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/invoices/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "invoices",
            "1"
          ]
        },
        "description": "Retrieves a specific invoice by its ID"
      },
      "response": []
    },
    {
      "name": "Get Invoice by Invoice Number",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/invoices/number/INV-001",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "invoices",
            "number",
            "INV-001"
          ]
        },
        "description": "Retrieves a specific invoice by its invoice number"
      },
      "response": []
    },
    {
      "name": "Create New Invoice",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"invoiceNumber\": \"INV-004\",\n  \"customerName\": \"Example Customer\",\n  \"invoiceDate\": \"2023-01-01\",\n  \"description\": \"Example invoice\",\n  \"status\": \"PENDING\",\n  \"lineItems\": [\n    {\n      \"description\": \"Item 1\",\n      \"price\": 500.00,\n      \"quantity\": 1\n    },\n    {\n      \"description\": \"Item 2\",\n      \"price\": 250.00,\n      \"quantity\": 2\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/invoices",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "invoices"
          ]
        },
        "description": "Creates a new invoice in the system. The total amount will be calculated based on the line items."
      },
      "response": []
    },
    {
      "name": "Update Invoice",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"invoiceNumber\": \"INV-004\",\n  \"lineItems\": [\n    {\n      \"description\": \"New Item 1\",\n      \"price\": 750.00,\n      \"quantity\": 1\n    },\n    {\n      \"description\": \"New Item 2\",\n      \"price\": 375.00,\n      \"quantity\": 2\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/invoices",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "invoices"
          ]
        },
        "description": "Updates an existing invoice in the system. The line items in the request will be added to the existing ones, and the total amount will be recalculated."
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
